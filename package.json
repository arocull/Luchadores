{
  "name": "luchadores",
  "version": "0.0.1",
  "description": "Luchadores is an arena-style combat game with a cast of silly and weird animals that participate in exaggerated \"wrestling\" matches.",
  "private": true,
  "main": "dist/src/server/server.js",
  "scripts": {
    "pretest": "npm run build",
    "test": "JEST_JUNIT_OUTPUT_DIR='coverage' jest dist/test --coverage --reporters=default --reporters=jest-junit",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "clean": "rm -rf dist/",
    "prebuild": "mkdir -p dist/public/ && cp -R assets/* dist/public/",
    "build": "npm run prebuild && tsc && webpack --config ./webpack/development.js",
    "rebuild": "npm run clean && npm run build",
    "watch": "webpack --config ./webpack/development.js --watch",
    "postinstall": "npm run build",
    "build-prod": "webpack --config ./webpack/production.js",
    "rebuild-prod": "npm run clean && npm run build-prod",
    "web": "xdg-open ./dist/public/index.html",
    "prestart": "npm run build",
    "start": "node ./dist/src/server/server.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx}": [
      "./node_modules/.bin/eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "http://git.maxocull.com/ocull/brothers/luchadores.git"
  },
  "keywords": [
    "game",
    "io",
    "fight",
    "animals",
    "wrestling",
    "arena"
  ],
  "author": "Alan O'Cull, James O'Cull, Max O'Cull",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.9.1",
    "@types/socket.io": "^2.1.4",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.0.0",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.0.8",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "socket.io": "^2.3.0",
    "winston": "^3.2.1"
  }
}
